<div class="bg-light rounded h-20 p-4 mt-3 mr-5">
    <button class="btn btn-outline-success text-success text fw-bold add-btn mb-1" data-toggle="modal"
        data-target="#add-modal" data-id="{{this.id}}" data-name="{{this.name}}" data-email="{{this.email}}"
        data-password="{{this.password}}" data-isadmin="{{this.isAdmin}}" data-lock="{{this.lock}}"> <i
            class="bi bi-plus"></i>
        <a class="text-success text fw-bold">Tạo mới</a></button>
    </button>


    <table class="table">
        <thead>
            <tr class="text-primary">

                <th scope="col">Máy bay</th>
                <th scope="col">Từ</th>
                <th scope="col">Đến</th>
                <th scope="col">Ngày khởi hành</th>
                <th scope="col">Ngày tới</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>

        <tbody>
            {{#if flight}}
            {{#each flight}}
            <tr>

                <td>{{this.airline}}</td>
                <td>{{this.departure_location}}</td>
                <td>{{this.arrival_location }}</td>
                <td>{{dateFormat this.departure_date}}</td>
                <td>{{dateFormat this.arrival_date}}</td>
                <td>
                    <div class="d-flex flex-row"><button class="btn btn-primary edit-btn btn btn-sm btn-primary"
                            data-toggle="modal" data-target="#edit-modal" data-flight_id="{{this.flight_id}}"
                            data-airline="{{this.airline}}" data-departure_time="{{this.departure_time}}"
                            data-arrival_time="{{this.arrival_time}}"
                            data-departure_location="{{this.departure_location}}"
                            data-arrival_location="{{this.arrival_location}}"
                            data-departure_date="{{dateFormat this.departure_date}}" data-arrival_date="{{ dateFormat this.arrival_date}}"
                            data-economy_price="{{economy_price}}"
                            data-business_price="{{business_price}}">Sửa</button>|

                        <form method="post" action="/admin/flight/{{{this.flight_id}}}/delete">
                            <button class="btn btn-sm btn-danger" type="submit"
                                onclick="return confirm('Are you sure you want to delete this account?')">Xóa</button>|
                        </form>
                        <button class="btn btn-primary detail-btn btn btn-sm btn-warning" data-toggle="modal"
                            data-target="#detail-modal" data-toggle="modal" data-flight_id="{{this.flight_id}}"
                            data-airline="{{this.airline}}" data-departure_time="{{this.departure_time}}"
                            data-arrival_time="{{this.arrival_time}}"
                            data-departure_location="{{this.departure_location}}"
                            data-arrival_location="{{this.arrival_location}}"
                            data-departure_date="{{dateFormat this.departure_date}}" data-arrival_date="{{ dateFormat this.arrival_date}}"
                            data-economy_price="{{economy_price}}" data-business_price="{{business_price}}">Thêm</button>
                    </div>
                </td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>
<!-- Add modal -->
<div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="add-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-success" id="add-modal-label">Thêm mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="add-form" method="post">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <label for="add-name">Máy bay:</label>
                        <input type="text" class="form-control" id="add-departure" name="airline">
                    </div>
                    <div class="form-group">
                        <label for="add-name">Khởi hành:</label>
                        <input type="text" class="form-control" id="add-departure" name="departure_location">
                    </div>
                    <div class="form-group">
                        <label for="add-email">Điểm đến:</label>
                        <input type="text" class="form-control" id="add-email" name="arrival_location">
                    </div>
                    <div class="form-group">
                        <label for="add-password">Ngày khởi hành:</label>
                        <input type="date" class="form-control" id="add-password" name="departure_date">
                    </div>
                    <div class="form-group">
                        <label for="add-password">Ngày tới:</label>
                        <input type="date" class="form-control" id="add-password" name="arrival_date">
                    </div>
                    <div class="form-group">
                        <label for="add-password">Giờ khởi hành:</label>
                        <input type="time" class="form-control" id="add-password" name="departure_time">
                    </div>
                    <div class="form-group">
                        <label for="add-password">Giờ tới:</label>
                        <input type="time" class="form-control" id="add-password" name="arrival_time">
                    </div>
                    <div class="form-group">
                        <label for="add-password">Hạng thường:</label>
                        <input type="number" step="0.01" class="form-control" id="add-password" name="economy_price">
                    </div>
                    <div class="form-group">
                        <label for="add-password">Hạng thương gia:</label>
                        <input type="number" step="0.01" class="form-control" id="add-password" name="business_price">
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" form="add-form" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
</div>




