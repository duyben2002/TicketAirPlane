    <script>
        const arrivalDateContainer = document.getElementById('arrival-date-container');
        const tripTypeRadioButtons = document.querySelectorAll('input[name="trip_type"]');
        const progressBar = document.getElementById('progress-bar');
        const searchButton = document.getElementById('search-button');

        function toggleArrivalDate() {
            if (this.value === 'one-way') {
                arrivalDateContainer.style.display = 'none';
            } else {
                arrivalDateContainer.style.display = 'block';
            }
        }

        tripTypeRadioButtons.forEach(radioButton => {
            radioButton.addEventListener('change', toggleArrivalDate);
        });

        const departureDateInput = document.querySelector('input[name="departureDate"]');
        const arrivalDateInput = document.querySelector('input[name="arrival_date"]');

        departureDateInput.addEventListener('change', () => {
            const departureDate = new Date(departureDateInput.value);
            const departureDatePlusOneDay = new Date(departureDate.getTime() + (24 * 60 * 60 * 1000));
            arrivalDateInput.setAttribute('min', departureDatePlusOneDay.toISOString().slice(0, 10));
        });

        // Lấy thêm biến formElement để tránh truy xuất DOM nhiều lần
        const formElement = document.querySelector('form');
        formElement.addEventListener('submit', (event) => {
            event.preventDefault();
            progressBar.style.display = 'block';
            progressBar.value = 0;
            const intervalId = setInterval(() => {
                progressBar.value += 5;
                if (progressBar.value >= 100) {
                    clearInterval(intervalId);
                    // Sau 500ms chuyển trang để tránh progress bar vẫn còn chạy
                    setTimeout(() => {
                        formElement.submit();
                    }, 500);
                }
            }, 100);
        });

    </script>
